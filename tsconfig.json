{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["dom", "es2015", "es2016"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": [
    "artifacts/**/*",
    "dist/**/*",
    "public/**/*",
    "node_modules",
    ".cache",
    "gatsby-config.js",
    "gatsby-browser.js",
    "gatsby-node.js"
  ]
}
